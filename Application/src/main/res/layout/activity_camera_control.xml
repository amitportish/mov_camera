<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_camera_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mov.android.camera2video.CameraControl"
    tools:theme="@style/AlertDialog.AppCompat.Light"
    android:weightSum="1">


    <ToggleButton

        android:textOff="Portrait"
        android:textOn="Landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/toggle_orientation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton

        android:textOff="Front Camera"
        android:textOn="Back Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/toggle_frontback"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Record Duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/duration_label" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="29"
        android:progress="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:id="@+id/duration_bar"
        android:theme="@style/AlertDialog.AppCompat.Light"
        android:clickable="true"
        android:layout_weight="2.31" />

    <Button
        android:text="Record"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/record_button" />


</LinearLayout>
